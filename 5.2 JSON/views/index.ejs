<!DOCTYPE html>
<html>

<head>
  <title>Taco Recipes</title>
  <link rel="stylesheet" type="text/css" href="/styles/main.css">
</head>

<body>
  <h1><a href="/">Taco Town 🌮</a></h1>

  <form action="/recipe" method="POST" class="buttons">

    <button type="submit" value="chicken" name="choice">🍗</button>
    <button type="submit" value="beef" name="choice">🥩</button>
    <button type="submit" value="fish" name="choice">🐟</button>
  </form>
  <div id="recipeContainer" class="hidden">

    <!-- Else, show the recipe name e.g. <h2>Recipe name</h2>-->
    <% if (locals.chosenRecipe) { %>
      <% console.log("Locals Recipes: ", locals.chosenRecipe) %>
      <h3>Ingredients:</h3>
      <ul id="ingredientsList">
        <li><%= locals.chosenRecipe.ingredients.protein.name %>, <%= locals.chosenRecipe.ingredients.protein.preparation %></li>
        <li><%= locals.chosenRecipe.ingredients.salsa.name %></li>

        <% for (let i = 0; i < locals.chosenRecipe.ingredients.toppings.length; i++) { %>
        <li><%= locals.chosenRecipe.ingredients.toppings[i].name %>, 
          <%= locals.chosenRecipe.ingredients.toppings[i].quantity %>,
          <%= locals.chosenRecipe.ingredients.toppings[i].ingredients %>
        </li>
        <% } %>
      </ul>
    <% } else { %>
      <!-- If no recipe yet, show: -->
      <h2>Pick your favourite taco ingredient 👆</h2>

    <% } %>

  </div>
</body>

</html>